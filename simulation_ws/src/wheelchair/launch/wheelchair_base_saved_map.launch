<?xml version="1.0"?>

<launch>
	<!-- Load model with xacro -->
	<arg name="model" default="$(find wheelchair)/urdf/wheelchair.urdf.xacro" />
	<param command="xacro $(arg model)" name="robot_description"/>

	<!-- Publish the robot description -->
  	<node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" respawn="false" output="screen" />

	<!-- Spawn robot in gazebo -->
    <node name="spawn_robot" pkg="gazebo_ros" type="spawn_model"
          args="-param robot_description
                -urdf
				-y 0
				-z 0
				-x 0
                -model robot_description"
          respawn="false" output="screen" />

	<param name="use_gui" value="false"/>


	<!-- Launch Saved map -->
	<arg name="mapfile" default="$(find wheelchair)/map/simple_maze.yaml" />
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg mapfile)" required="true">
		<param name="frame_id" value="map"/>
	</node>

	<node pkg="amcl" type="amcl" name="amcl" output="screen" args="scan:=laser_scan">
  		<param name="laser_model_type" value="likelihood_field"/>
  		<param name="scan" value="laser_scan"/>
  		<param name="odom_frame_id" value="odom"/>
  		<param name="base_frame_id" value="base_link"/>
  		<param name="global_frame_id" value="map"/>
  		<param name="tf_broadcast" value="true"/>
 	</node>

	<!-- Launch Rviz -->
	<!-- <arg name="rvizconfig" default="$(find wheelchair)/config/wheelchair_urdf.rviz" /> -->
	<!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" /> -->

</launch>
